<div id="login">
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" asp-route-returnUrl="@Model.ReturnUrl" class="form" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label for="FirstName" class="text-info">نام</label><br>
                            <input asp-for="Input.FirstName" type="text" name="FirstName" id="FirstName" class="form-control">
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label for="LastName" class="text-info">نام خانوادگی</label><br>
                            <input asp-for="Input.LastName" type="text" name="LastName" id="LastName" class="form-control">
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label for="LastName" class="text-info">شماره همراه</label><br>
                            <input asp-for="Input.UserName" type="text" name="UserName" id="LastName" class="form-control">
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label for="password" class="text-info">رمز عبور</label><br>
                            <input asp-for="Input.Password" type="password" name="password" id="password" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="ConfirmPassword" class="text-info">تکرار رمز عبور</label><br>
                            <input asp-for="Input.ConfirmPassword" type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-primary" value="ثبت نام">

                        </div>


                        <div class="form-group mt-2">
                            <a asp-area="Identity" asp-page="/Account/Login" tabindex="5" class="forgot-password">بازگشت به صفحه ورود  </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
