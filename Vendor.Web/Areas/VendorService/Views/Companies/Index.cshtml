                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ActivityDescription)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaterialList)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Randd)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ConstructionMetod)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.QcProgram)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ResearchMember)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UploadUseLicensePic)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UploadStatutePic)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UploadOfficialnewspapers)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UploadProductCatalog)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UploadDocuments)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UploadMemberOfTheInstitute)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.OwnershipType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CompanyType)
                                    </th>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.Car)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.License)
                                    </th>*@
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
