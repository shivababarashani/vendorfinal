                                            @Html.DisplayFor(modelItem => item.OwnershipType.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CompanyType.Id)
                                        </td>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.Car.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.License.Id)
                                        </td>*@
                                        <td>
                                            <a class="btn btn-sm btn-primary pull-right" onclick="Edit('@item.Id')">ویرایش</a> |
                                            <a class="btn btn-sm btn-danger pull-right" onclick="Del('@item.Id')"> حذف</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>

    function Add() {
            var SendingUrl = '@Url.Action("Create", "Companies")';
            $.get(SendingUrl,
                function (frmEdit) {
                    $("#itemEdit").html(frmEdit);
                    $("#edit-files").modal("show");

                });
        }

    function Edit(Id) {
            var SendingUrl = '@Url.Action("Edit", "Companies")';
        var SendingData = 'Id=' + Id ;
            $.get(SendingUrl,
                SendingData,
                function (frmEdit) {
                    $("#itemEdit").html(frmEdit);
                    $("#edit-files").modal("show");

                });
    }



    function Del(Id) {
            var SendingUrl = '@Url.Action("Delete", "Companies")';
        var SendingData = 'Id=' +Id;
            $.get(SendingUrl,
                SendingData,
                function (frmEdit) {
                    $("#itemEdit").html(frmEdit);
                    $("#edit-files").modal("show");

                });
        }


</script>
