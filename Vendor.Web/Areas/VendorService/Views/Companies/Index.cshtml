                                            @Html.DisplayFor(modelItem => item.ResearchMember)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UploadUseLicensePic)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UploadStatutePic)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UploadOfficialnewspapers)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UploadProductCatalog)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UploadDocuments)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UploadMemberOfTheInstitute)
                                        </td>
