                                        <td>
                                            @Html.DisplayFor(modelItem => item.EconomicCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UseLicenseNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UseLicenseDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ActivityDescription)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaterialList)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Randd)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ConstructionMetod)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.QcProgram)
                                        </td>
