                                    <th>
                                        @Html.DisplayNameFor(model => model.NationalId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EconomicCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UseLicenseNumber)
                                    </th>
