@model IEnumerable<Vendor.Domain.Entites.Companies.Company>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="extended">
    <div class="row justify-content-lg-center">
        <div class="col-lg-12">
            <div class="card">
