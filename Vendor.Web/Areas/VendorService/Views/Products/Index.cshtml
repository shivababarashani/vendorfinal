                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Corroborant)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CompanyId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UserId)
                                    </th>
