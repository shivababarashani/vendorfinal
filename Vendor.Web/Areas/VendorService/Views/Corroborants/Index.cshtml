@model IEnumerable<Vendor.Domain.Entites.Corroborants.Corroborant>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="extended">
    <div class="row justify-content-lg-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success mb-2 text-bold-700 font-size-1-3">
                        تایید کننده
                    </div>
                </div>

                <div class="col-lg-12 container-fluid  text-right">
                    <a onclick="Add()" class="btn btn-outline btn-success font-size-0-9"><i class="fas fa-plus"></i> افزودن </a>
                </div>

                <div class="card-body m-3">
                    <div class="">
                        <table class="table table-responsive-md text-center table-bordered table-striped" id="mytable">
                            <thead class="thead-dark text-white">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.StartDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EndDate)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.CorroborantTypeId)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndDate)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.CorroborantTypeId)
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-primary pull-right" onclick="Edit('@item.Id')">ویرایش</a> |
                                        <a class="btn btn-sm btn-danger pull-right" onclick="Del('@item.Id')"> حذف</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>

    function Add() {
            var SendingUrl = '@Url.Action("Create", "Corroborants")';
            $.get(SendingUrl,
                function (frmEdit) {
                    $("#itemEdit").html(frmEdit);
                    $("#edit-files").modal("show");

                });
        }

    function Edit(Id) {
            var SendingUrl = '@Url.Action("Edit", "Corroborants")';
        var SendingData = 'Id=' + Id ;
            $.get(SendingUrl,
                SendingData,
                function (frmEdit) {
                    $("#itemEdit").html(frmEdit);
                    $("#edit-files").modal("show");

                });
    }



    function Del(Id) {
            var SendingUrl = '@Url.Action("Delete", "Corroborants")';
        var SendingData = 'Id=' +Id;
            $.get(SendingUrl,
                SendingData,
                function (frmEdit) {
                    $("#itemEdit").html(frmEdit);
                    $("#edit-files").modal("show");

                });
        }


</script>
